{# templates/author/author_details.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Biblioth√®que</a>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card text-center shadow">
                    <div class="card-header bg-warning text-white">
                        <h1 class="h4">Author Details</h1>
                    </div>
                    <div class="card-body">
                        {# Display the author's picture if available #}
                        {% if author.picture %}
                            <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" class="img-fluid rounded-circle mb-3" style="width: 150px;">
                        {% else %}
                            <img src="{{ asset('images/default-image.jpg') }}" alt="Default Image" class="img-fluid rounded-circle mb-3" style="width: 150px;">
                        {% endif %}
                        <h2 class="card-title">{{ author.username | upper }}</h2>
                        <p class="card-text"><strong>Email:</strong> {{ author.email }}</p>
                        <p class="card-text"><strong>Number of Books:</strong> {{ author.nbBooks }}</p>
                        <a href="{{ path('app_authorList') }}" class="btn btn-primary">Back to Author List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
