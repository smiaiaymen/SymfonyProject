{# templates/author/new.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Add New Author</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="card shadow-sm border-light">
            <div class="card-header bg-primary text-white text-center">
                <h5 class="mb-0">Author Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    {{ form_label(form.username, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Enter author username'}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter author email'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.picture, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.picture) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.nb_books, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nb_books, {'attr': {'class': 'form-control', 'placeholder': 'Number of books'}}) }}
                    {{ form_errors(form.nb_books) }}
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a href="{{ path('app_authorList') }}" class="btn btn-secondary">Back to Author List</a>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
